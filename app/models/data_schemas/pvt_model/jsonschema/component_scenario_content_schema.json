{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "ComponentScenarioID": {
            "type": "string",
            "pattern": "^[\\w\\-\\.]+:work-product-component\\-\\-ComponentScenario:[\\w\\-\\.\\:\\%]+:[0-9]*$"
        },
        "ComponentScenarioName": {
            "type": "string"
        },
        "ComponentMoleFraction": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "ComponentName": {
                        "type": "string"
                    },
                    "MoleFraction": {
                        "type": "object",
                        "properties": {
                            "Value": {
                                "type": "number"
                            },
                            "UnitOfMeasure": {
                                "type": "string",
                                "pattern": "^[\\w\\-\\.]+:reference-data\\-\\-UnitOfMeasure:[\\w\\-\\.\\:\\%]+:[0-9]*$"
                            }
                        },
                        "additionalProperties": false
                    }
                },
                "additionalProperties": false
            }
        },
        "ComponentConsolidationMethod": {
            "type": "string",
            "description": "Description of the methods used to derive the component mole fractions"
        }
    },
    "additionalProperties": false,
    "required": [
        "ComponentScenarioID"
    ]
}
