{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "SamplesAnalysisID": {
            "type": "string",
            "pattern": "^[\\w\\-\\.]+:work-product-component\\-\\-SamplesAnalysis:[\\w\\-\\.\\:\\%]+:[0-9]*$"
        },
        "SampleID": {
            "type": "string",
            "pattern": "^[\\w\\-\\.]+:master-data\\-\\-Sample:[\\w\\-\\.\\:\\%]+:[0-9]*$"
        },
        "ElementalComposition": {
            "title": "Elemental Composition",
            "description": "Elemental Composition in a rock sample determined by Energy-dispersive spectroscopy EDS-Mapping",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "Element": {
                        "type": "string",
                        "pattern": "^[\\w\\-\\.]+:reference-data\\-\\-Elements:[\\w\\-\\.\\:\\%]+:[0-9]*$"
                    },
                    "Concentration": {
                        "type": "object",
                        "properties": {
                            "PeakPosition": {
                                "type": "object",
                                "properties": {
                                    "XCoordinate": {
                                        "type": "number"
                                    },
                                    "YCoordinate": {
                                        "type": "number"
                                    }
                                },
                                "additionalProperties": false
                            },
                            "Value": {
                                "type": "number"
                            },
                            "UnitOfMeasure": {
                                "type": "string",
                                "pattern": "^[\\w\\-\\.]+:reference-data\\-\\-UnitOfMeasure:[\\w\\-\\.\\:\\%]+:[0-9]*$"
                            }
                        },
                        "additionalProperties": false
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "SamplesAnalysisID",
        "SampleID"
    ]
}
