{
  "$id": "isotopes.1.0.0.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "IsotopeAnalysisDataSchema",
  "description": "IsotopeAnalysisDataSchema",
  "type": "object",
  "properties": {
    "SamplesAnalysisID": {
      "type": "string",
      "pattern": "^[\\w\\-\\.]+:work-product-component\\-\\-SamplesAnalysis:[\\w\\-\\.\\:\\%]+:[0-9]*$",
      "x-osdu-relationship": [
        {
          "EntityType": "SamplesAnalysis",
          "GroupType": "work-product-component"
        }
      ]
    },
    "SampleID": {
      "type": "string",
      "pattern": "^[\\w\\-\\.]+:master-data\\-\\-Sample:[\\w\\-\\.\\:\\%]+:[0-9]*$",
      "x-osdu-relationship": [
        {
          "EntityType": "Sample",
          "GroupType": "master-data"
        }
      ]
    },
    "Method": {
      "type": "string",
      "description": "The sample analysis method used for this analysis",
      "pattern": "^[\\w\\-\\.]+:reference-data\\-\\-BulkPyrolysisMethod:[\\w\\-\\.\\:\\%]+:[0-9]*$",
      "x-osdu-relationship": [
        {
          "EntityType": "BulkPyrolysisMethod",
          "GroupType": "reference-data"
        }
      ]
    },
    "IsotopeAnalysisData": {
      "title": "Isotope Analysis Data",
      "description": "Isotope analysis of a individual rock or fluid compounds (e.g. C16 isoprenoid), gas components (e.g. Methane) or a bulk sample (e.g. whole oil) where an isotopic value is determined",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Component": {
            "type": "string",
            "pattern": "^[\\w\\-\\.]+:reference-data\\-\\-(GasIsotopeComponents|NonGasIsotopeComponents|CompoundSpecificIsotopeComponents):[\\w\\-\\.\\:\\%]+:[0-9]*$",
            "x-osdu-relationship": [
              {
                "EntityType": "(GasIsotopeComponents|NonGasIsotopeComponents|CompoundSpecificIsotopeComponents)",
                "GroupType": "reference-data"
              }
            ]
          },
          "IsotopeRatio": {
            "type": "array",
            "description": "Elements isotope ratio for each individual rock or fluid compound (e.g. C16 isoprenoid), gas component (e.g. Methane) or a bulk sample (e.g. whole oil)",
            "items": {
              "type": "object",
              "properties": {
                "Element": {
                  "type": "string",
                  "pattern": "^[\\w\\-\\.]+:reference-data\\-\\-IsotopeRatioElements:[\\w\\-\\.\\:\\%]+:[0-9]*$",
                  "x-osdu-relationship": [
                    {
                      "EntityType": "IsotopeRatioElements",
                      "GroupType": "reference-data"
                    }
                  ]
                },
                "AtomicNumber": {
                  "type": "number",
                  "description": "atomic number of the element of an isotope, example 13 for d13 or Carbon 13"
                },
                "Value": {
                  "type": "number"
                },
                "UnitOfMeasure": {
                  "type": "string",
                  "pattern": "^[\\w\\-\\.]+:reference-data\\-\\-UnitOfMeasure:[\\w\\-\\.\\:\\%]+:[0-9]*$",
                  "x-osdu-relationship": [
                    {
                      "EntityType": "UnitOfMeasure",
                      "GroupType": "reference-data"
                    }
                  ]
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": [
    "SamplesAnalysisID",
    "SampleID"
  ],
  "additionalProperties": false
}
